<% case node['platform'] -%>
<% when 'amazon' -%>
export instance_id=$(wget -q -O - http://169.254.169.254/latest/meta-data/instance-id)
export tag_name=$(aws ec2 --output text --region ${AWS_DEFAULT_REGION} describe-tags --filters "Name=resource-id,Values=${instance_id}" "Name=key,Values=Name" --query "Tags[*].Value")
export PS1="\[\e[0;31m\][\u@\[\e[0;36m\]${tag_name} \[\e[0;32m\]\t \[\e[0;31m\]\W][\!][\#]\[\e[00m\]\\$ "
<% else -%>
export PS1="\[\e[0;31m\][\u@\[\e[0;36m\]\h \[\e[0;32m\]\t \[\e[0;31m\]\W][\!][\#]\[\e[00m\]\\$ "
<% end -%>
export EDITOR="/usr/bin/vim"
export LESS="-Ri"
export LESSCHARSET=utf-8
export CLICOLOR=1
export TZ="<%= node['common']['timezone'] %>"

alias vi="vim"
